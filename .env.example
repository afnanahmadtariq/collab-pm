# =============================================================================
# Collab-PM Environment Variables Template
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit the actual .env file to version control!
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=collab
POSTGRES_PASSWORD=collab_secret
POSTGRES_DB=collabpm
POSTGRES_PORT=5432

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=4000
CORS_ORIGIN=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# Frontend Configuration
# =============================================================================
INTERFACE_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# S3-Compatible Storage (MinIO for development)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=collab-pm-files
S3_REGION=us-east-1

# =============================================================================
# Image Tags (for production deployments)
# =============================================================================
API_TAG=latest
INTERFACE_TAG=latest
